<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.durocrete_punesales_newapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="com.durocrete_punesales_newapp.network.AppController"
        android:allowBackup="true"
        android:icon="@drawable/durocreate"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.durocrete_punesales_newapp.activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <activity
            android:name="com.durocrete_punesales_newapp.activity.Siteallocationactivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:label="Site Allocation" />
        <activity
            android:name="com.durocrete_punesales_newapp.activity.AddnewSite"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:label="Add New Site" />
        <activity
            android:name="com.durocrete_punesales_newapp.activity.Saleshistory"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:label="Sales Eng. History" />

        <activity android:name="com.durocrete_punesales_newapp.activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
    </application>

</manifest>