<android.support.v7.widget.CardView android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_width="275dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:gravity="left"
            android:id="@+id/names"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <CheckBox
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/checkbox"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_width="0dp"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/testname"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.65"
                android:layout_width="0dp"
                android:text="Kumar Constructions"
                android:textColor="#18683D"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearmaterialdetails"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="0.5">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:clickable="true"
                    android:gravity="left|center"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:text="Make/Supplier"
                    android:textColor="#000" />

                <EditText
                    android:autoLink="web"
                    android:clickable="true"
                    android:gravity="left"
                    android:id="@+id/txtmake"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_border"
                    android:layout_width="match_parent"
                    android:textColor="#0097A7" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:clickable="true"
                    android:gravity="left|center"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:text="Description"
                    android:textColor="#000" />

                <EditText
                    android:autoLink="web"
                    android:clickable="true"
                    android:gravity="left"
                    android:id="@+id/txtdescript"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_border"

                    android:layout_width="match_parent"
                    android:textColor="#0097A7" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:clickable="true"
                    android:gravity="left|center"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:text="Quantity"
                    android:textColor="#000" />

                <EditText
                    android:autoLink="web"
                    android:clickable="true"
                    android:gravity="left"
                    android:id="@+id/txtquantity"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_border"

                    android:layout_width="match_parent"
                    android:textColor="#0097A7" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutbatch_no"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <TextView
                    android:clickable="true"
                    android:gravity="left|center"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:text="Batch No."
                    android:textColor="#000" />

                <EditText
                    android:autoLink="web"
                    android:clickable="true"
                    android:gravity="left"
                    android:id="@+id/txtbatchno"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/edit_text_border"

                    android:layout_width="match_parent"
                    android:textColor="#0097A7" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>