        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Site Name"
                android:layout_marginBottom="2dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/etxtanno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginBottom="2dp"
                android:maxLength="10"
                android:textColor="#0097A7"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="3" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Site Address"
                android:layout_marginBottom="2dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Accountname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginBottom="2dp"
                android:inputType="number"
                android:textColor="#0097A7"
                android:maxLength="11"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="3" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Site Latitude"
                android:layout_marginBottom="2dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sitelatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginBottom="2dp"
                android:inputType="number"
                android:textColor="#0097A7"
                android:maxLength="11"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="3" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Site Longitude"
                android:layout_marginBottom="2dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sitelongitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginBottom="2dp"
                android:inputType="number"
                android:textColor="#0097A7"
                android:maxLength="11"
                android:textSize="16sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="3" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginBottom="2dp"
                android:text="Contact Person Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Accountcontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginBottom="2dp"
                android:inputType="number"
                android:textColor="#0097A7"
                android:maxLength="11"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="3" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginBottom="2dp"
                android:text="Contact Mobile No."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Contactmobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginBottom="2dp"
                android:inputType="number"
                android:textColor="#0097A7"
                android:maxLength="11"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/check_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/login_button_selector"
                android:text="Check In"
                android:textColor="#ffffff"
                android:textSize="16sp" />
