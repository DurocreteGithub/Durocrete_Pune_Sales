<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_division_leadgeneration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.98"
                    android:text="Select Material"
                    android:textSize="16sp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spselectmaterial"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvmaterialtestlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:dividerHeight="5dp">

        </ListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/linearlayoutquantity"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="No.of  sets of 3 cubes each"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spNoofsets"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:entries="@array/no_of_sets"
                android:background="@drawable/spinner_bg"
                android:textColor="#0097A7"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>





